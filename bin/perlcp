#!/usr/bin/perl

# workaround for dzil
package perlcp;
{
  $perlcp::VERSION = '0.43';
}

use strict;
use warnings;
use FindBin '$Bin';
use lib "$Bin/../lib";
use App::perlmv;

my $pmv = App::perlmv->new;
$pmv->{ 'mode' } = 'copy';
$pmv->run;

1;


=pod

=head1 NAME

perlcp

=head1 VERSION

version 0.43

=head1 DESCRIPTION

See L<perlmv> for more documentation.

=head1 NAME

perlcp - Copy files using Perl code

=head1 SEE ALSO

L<perlmv>

