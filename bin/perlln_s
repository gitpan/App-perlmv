#!/usr/bin/perl

# workaround for dzil
package perlln_s;
{
  $perlln_s::VERSION = '0.43';
}

use strict;
use warnings;
use FindBin '$Bin';
use lib "$Bin/../lib";
use App::perlmv;

my $pmv = App::perlmv->new;
$pmv->{ 'mode' } = 'symlink';
$pmv->run;

1;

__END__
=pod

=head1 NAME

perlln_s

=head1 VERSION

version 0.43

=head1 DESCRIPTION

See L<perlmv> for more documentation.

=head1 NAME

perlln_s - Symlink files using Perl code

=head1 SEE ALSO

L<perlmv>

